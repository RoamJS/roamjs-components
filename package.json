{
  "name": "roamjs-components",
  "description": "Description for roamjs-components",
  "version": "0.12.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "npm t",
    "build": "ncc build src/index.ts -o dist -e react -e react-dom -e @blueprintjs/core -e @blueprintjs/select",
    "format": "prettier --write \"src/**/*.tsx\"",
    "lint": "eslint . --ext .ts,.tsx",
    "prepublishOnly": "npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push origin main && git push --tags",
    "pretest": "npm run lint",
    "test": "jest --config jestconfig.json"
  },
  "license": "MIT",
  "files": [
    "/dist"
  ],
  "peerDependencies": {
    "react": "^16.8.0 || ^17",
    "react-dom": "^16.8.0 || ^17",
    "@blueprintjs/core": "^3.42.0",
    "@blueprintjs/select": "^3.16.0"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.42.0",
    "@blueprintjs/select": "^3.16.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "roam-client": "^1.70.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.2",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "@vercel/ncc": "^0.28.2",
    "eslint": "^7.24.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "tslib": "^2.2.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react-hooks": "^2.2.2",
    "typescript": "^4.2.4"
  }
}
