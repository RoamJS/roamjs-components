{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2015",
    "allowJs": false,
    "lib": ["DOM", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
